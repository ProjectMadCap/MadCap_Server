<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>

<!--META-->
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Class Room</title>

<!--STYLESHEETS-->
<link href="" rel="stylesheet" type="text/css" />

<!--SCRIPTS-->
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js"></script>
<!--Slider-in icons-->
<script type="text/javascript">
function myFunction() {
    var formData = {
        'name': $('input[name=name]').val(),
        'instructor_id': $('input[name=instructor_id]').val(),
        'grade_level': $('select[name=grade_level]').val(),
        'description': $('input[name=description]').val()
    };
    $.ajax({ 
        type: 'POST',
        data: formData, 
        url: 'http://localhost/api/course/', 
        dataType: 'json',
        encode: true, 
        success: function (data) { 
            console.log(data);
            console.log("Submitting: " + formData);
        }
    });
    alert("Student successfully created!");
};
</script>

</head>
<body>

<!--CLASS FORM-->
<form name="class-form" onsubmit="event.preventDefault(); myFunction();">

    <!--HEADER-->
    <div class="header">
    <!--TITLE--><h1>Class Room</h1><!--END TITLE-->
    </div>
    <!--END HEADER-->
    
    <!--CONTENT-->
    <div>
    Class Name: <input name="name" type="text" required="required" /><br><br>
    Grade Level:  <select name="grade_level" required="required">
                    <option value=""></option>
                    <option value="0">K</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                </select><br><br>
    Description:      <textarea name="description" rows="4" cols="50" required="required"></textarea>

    <!--INSTRUCTOR_ID HARDCODED RIGHT HERE -->
    <input name="instructor_id" type="number" hidden="" value="123" />
    </div>
    <!--END CONTENT-->
    
    <!--FOOTER-->
    <div>
            <button><a href="/classes" class="button" style="text-decoration:none">Back</a></button>
    <!--ADD CLASS BUTTON--><input type="submit" name="submit" value="Add Class" class="button" /><!--END REGISTER BUTTON-->
    </div>
    <div>
    </div>
    <!--END FOOTER-->

</form>
<!--END LOGIN FORM-->


</body>
</html>