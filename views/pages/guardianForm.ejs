<body>

<div class="container">
<div class="row margin20">
<div class="col-md-10 col-md-offset-1 backgrnd padding20 margin20">

<!--CLASS FORM-->
<form name="parent-form" onsubmit="event.preventDefault(); myFunction();">

    <!--HEADER-->
    <div class="header">
    <!--TITLE--><h1>Parent Form</h1><!--END TITLE-->
    </div>
    <!--END HEADER-->
    
    <!--CONTENT-->
    <div>
    First Name: <input name="first" type="text" required="required" /><br><br>
