    <input name="instructor_id" type="number" hidden="" value="123" />
    </div>
    <!--END CONTENT-->
    
    <!--FOOTER-->
    <div>
            <button><a href="/guardians" class="button" style="text-decoration:none">Back</a></button>
    <!--ADD CLASS BUTTON--><input type="submit" name="submit" value="Add Parent" class="button" /><!--END REGISTER BUTTON-->
    </div>
    <!--END FOOTER-->

</form>
<!--END LOGIN FORM-->
</div>
</div>
</div>

