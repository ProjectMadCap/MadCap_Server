<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>

<!--META-->
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Registration</title>

<!--STYLESHEETS-->
<link href="" rel="stylesheet" type="text/css" />
<link href="styles.css" rel="stylesheet" type="text/css" />

<!--SCRIPTS-->
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js"></script>

<script type="text/javascript">
    function myFunction() {
    var formData = {
        'first': $('input[name=firstName]').val(),
        'last': $('input[name=lastName]').val(),
        'email': $('input[name=email]').val(),
        'password': $('input[name=password]').val(),
    };
    $.ajax({ 
        type: 'POST',
        data: formData, 
        url: '/api/instructor/', 
        dataType: 'json',
        encode: true, 
        success: function (data) { 
            console.log(data);
            console.log("Submitting: " + formData);
        }
    });
    alert("instructor successfully created!");
};

</script>

</head>
<body>

<!--REGISTER FORM-->
<!--CHANGE LOGIN FORM CLASS IN CSS-->
<form name="register-form" onsubmit="event.preventDefault(); myFunction();">

    <!--HEADER-->
    <div class="header">
    <!--TITLE--><h1>Registration</h1><!--END TITLE-->
    </div>
    <!--END HEADER-->
    
    <!--CONTENT-->
    <div>
    First Name: <input name="firstName" type="text" class="input firstName" required="required" /><br><br>
    Last Name:  <input name="lastName" type="text" class="input lastName" required="required"/><br><br>
    Email:      <input name="email" type="text" class="input email" required="required"/><br><br>
    Password:   <input name="password" type="password" class="input password" required="required"/>
    </div>
    <!--END CONTENT-->
    
    <!--FOOTER-->
    <div>
            <br><button><a href="/login" class="button" style="text-decoration:none">Back</a></button>
    <!--REGISTER BUTTON--><input type="submit" name="submit" value="Register" class="button" /><!--END REGISTER BUTTON-->
    </div>
    <!--END FOOTER-->

</form>
<!--END LOGIN FORM-->

</body>
</html>
